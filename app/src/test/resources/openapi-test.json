{
  "openapi" : "3.0.1",
  "info" : {
    "title" : "Rent API",
    "description" : "Manage your rental properties",
    "contact" : {
      "name" : "Murilo Felpeto",
      "url" : "https://github.com/murilofelpeto",
      "email" : "murilofelpeto@confidential.com"
    },
    "version" : "1.0.0"
  },
  "paths" : {
    "/v1/properties" : {
      "get" : {
        "summary" : "Get all properties",
        "operationId" : "getProperties",
        "responses" : {
          "200" : {
            "description" : "Return a list of properties",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/PropertyResponseDto"
                  }
                }
              }
            }
          }
        }
      },
      "post" : {
        "summary" : "Get all houses",
        "operationId" : "createProperty",
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/PropertyRequestDto"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "201" : {
            "description" : "Return a created property",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/PropertyResponseDto"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/properties/{id}" : {
      "get" : {
        "summary" : "Get property by it's id",
        "operationId" : "getPropertyById",
        "parameters" : [ {
          "name" : "id",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Return a property",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/PropertyResponseDto"
                }
              }
            }
          }
        }
      },
      "put" : {
        "summary" : "Update property by it's id",
        "operationId" : "updateProperty",
        "parameters" : [ {
          "name" : "id",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        } ],
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/PropertyRequestDto"
              }
            }
          }
        },
        "responses" : {
          "200" : {
            "description" : "Update a property",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/PropertyResponseDto"
                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "PropertyRequestDto" : {
        "type" : "object",
        "properties" : {
          "city" : {
            "type" : "string"
          },
          "complement" : {
            "type" : "string"
          },
          "country" : {
            "type" : "string"
          },
          "number" : {
            "type" : "integer",
            "format" : "int32"
          },
          "propertyKind" : {
            "type" : "string"
          },
          "state" : {
            "type" : "string"
          },
          "streetName" : {
            "type" : "string"
          },
          "zipCode" : {
            "type" : "string"
          }
        }
      },
      "PropertyResponseDto" : {
        "type" : "object",
        "properties" : {
          "city" : {
            "type" : "string"
          },
          "complement" : {
            "type" : "string"
          },
          "country" : {
            "type" : "string"
          },
          "id" : {
            "type" : "string",
            "format" : "uuid"
          },
          "number" : {
            "type" : "integer",
            "format" : "int32"
          },
          "propertyKind" : {
            "type" : "string"
          },
          "state" : {
            "type" : "string"
          },
          "streetName" : {
            "type" : "string"
          },
          "zipCode" : {
            "type" : "string"
          }
        }
      }
    }
  }
}